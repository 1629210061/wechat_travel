/**index.wxss**/

.index-body {
  height: 100%;
  padding: 0;
  box-sizing: border-box; 
  font-size: 28rpx;
} 
/* 搜索框 */
 .search{
  width: 100%;
  position: relative;
  height: 2.082rem;
  background-color: #F2F2F2;
}

.search_logo{
  width: 5%;
  height: 1rem;
  background-size: 80%;
  position: absolute;
  margin-left: 10rpx;
  left: 5%;
  right: 5%;
  top: 0.3rem;
  
}

.search_input{
  position: absolute;
  top: 0.3em;
  left: 5%;
  width: 85%;
  border-radius: 10px;
  border: 1px solid #E1E1E1;
  
  padding-left: 8%;
  font-size: 12px;
  color: #000;
}
/* 轮播图 */

swiper.swiper {
  height: 450rpx;
    position: relative;
  /* top: 38px;
  margin-bottom: 16rpx; */
}
.swiper-item {
    display: block;
    height: 100%;
}
.slide-image {
  height: 100%;
  width: 100%;

  display: inline-block;
  overflow: hidden;
}

/* 功能块图标 */
.big-logo{
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-around;
  margin-top: 50px;
}
.big-logo1{
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-around;
  margin-top: 45px;
}
.logoinfo{
	display: flex;
	flex-direction: column;
	align-items: center;
	width:150rpx; 
	height: 140rpx; 
}

.logotext{
	color: #aaa;
	font-size: 29rpx;
}

/*周边热门景区*/

.img-box {
  margin-top: 44rpx;
  padding-bottom: 26rpx;
}

.img-box .img {
  position: relative;
  width: 328rpx;
  height: 194rpx;
  border-radius: 10px;
  float: left;
}

.img-box .img:nth-of-type(2n) {
  margin-left: 14rpx;
}

.img-box .img:nth-of-type(n+3) {
  margin-top: 14rpx;
}

.img-box image {
  width: 100%;
  height: 100%;
}

.img-box text {
  position: absolute;
  display: block;
  bottom: 0;
  left: 0;
  width: 100%;
  padding-left: 28rpx;
  box-sizing: border-box;
  height: 48rpx;
  line-height: 48rpx;
  background: rgba(255, 255, 255, 0.5);
  color: #fff;
  font-size: 26rpx;
}

.divider {
  width: 100%;
  height: 18rpx;
  background: #f0ede2;
}

.view-box {
  width: 100%;
}

.view {
  margin-top: 12rpx;
}

.view .img {
  margin-top: 3px;
  position: relative;
  width: 100%;
  height: 356rpx;
}

.view .img image {
  width: 100%;
  height: 100%;
}

.view .img text {
  position: absolute;
  display: block;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 356rpx;
  font-size: 30rpx;
  color: #eee;
  font-weight: bold;
  background: rgba(0, 0, 0, 0.534);
}

/*公共头部*/

.hot-view, .hot-city {
  padding: 0 40rpx;
  padding-top: 28rpx;
}

.hot .title {
  height: 34rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 35rpx;
  color: #948475;
  font-weight: bold;
}
.jg{
  margin-bottom: 20px;
}
.hot .title text {
  flex: 1 1 auto;
  text-align: center;
}

.hot .title text:first-child, .hot .title text:last-child {
  height: 1px;
  background: #eae1d2;
}

.img-box, .city-box {
  overflow: hidden;
}
