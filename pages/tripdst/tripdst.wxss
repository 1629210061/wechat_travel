/* pages/tripdst/tripdst.wxss */



.img-box {
  margin-top: 30rpx;


}

.img-box .img {
  position: relative;
  width: 328rpx;
  height: 200rpx;
  border-radius: 10px;
  float: left;


}

.img1 {
  margin-top: 10px;
  position: relative;
  width: 670rpx;
  height: 400rpx;
  border-radius: 10px;
  float: left;
}
.img2 {
  position: relative;
  width: 670rpx;
  height: 230rpx;
}

.img-box .img:nth-of-type(2n) {
  margin-left: 15rpx;
}

.img-box .img:nth-of-type(n+3) {
  margin-top: 20rpx;
}

.img-box image {
  width: 100%;
  height: 100%;
}

.img-box text {
  position: absolute;
  display: block;
  bottom: 0;
  left: 0;
  width: 100%;
  padding-left: 20rpx;
  box-sizing: border-box;
  height: 60rpx;
  line-height: 60rpx;
 
  color: #fff;
  font-size: 35rpx;
}

.divider {
  width: 100%;
  height: 18rpx;
  background: #f0ede2;
}

.view-box {
  width: 100%;
}

.view {
  margin-top: 12rpx;
}

.view .img {
  margin-top: 3px;
  position: relative;
  width: 100%;
  height: 356rpx;
}

.view .img image {
  width: 100%;
  height: 100%;
}




.hot-view, .hot-city {
  padding: 0 40rpx;
  padding-top: 10rpx;
}


