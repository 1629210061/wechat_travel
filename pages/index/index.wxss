/**index.wxss**/

.index-body {
  height: 100%;
  padding: 0;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #f1eded;
}

/* 轮播图 */

.swiper {
  height: 500rpx;
  width: 100%;
}

.swiper-item {
  display: block;
  height: 100%;
}

.img-bg {
  display: block;
  height: 100%;
  filter: blur(20px);
  opacity: 0.7;
}

.slide-box {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  z-index: 9;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  height: 420rpx;
  width: 80%;
}
.slide-box text{
  margin-top: 5px;
  margin-left: 10px;
  font-size: 16px;
  font-weight: 10;
  color: white;
  
}

.slide-image {
  display: inline-block;
  height: 350rpx;
  width: 100%;
  border-radius: 20px;
  overflow: hidden;
}

/* 功能块图标 */

.logo-box {
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: space-around;
  background-color: white;
  flex-flow: row wrap;
  margin: auto;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  position: absolute;
  z-index: 10;
  top: 240px;
}

.logoinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 150rpx;
  height: 130rpx;
  margin-top: 20px;
}

.logotext {
  color: #aaa;
  font-size: 29rpx;
}

/*周边热门景区*/

.img-box {
  margin-top: 44rpx;
  padding-bottom: 26rpx;
}

.img-box .img {
  position: relative;
  width: 328rpx;
  height: 194rpx;
  border-radius: 10px;
  float: left;
}

.img-box .img:nth-of-type(2n) {
  margin-left: 14rpx;
}

.img-box .img:nth-of-type(n+3) {
  margin-top: 14rpx;
}

.img-box image {
  width: 100%;
  height: 100%;
}

.img-box text {
  position: absolute;
  display: block;
  bottom: 0;
  left: 0;
  width: 100%;
  padding-left: 28rpx;
  box-sizing: border-box;
  height: 48rpx;
  line-height: 48rpx;
  background: rgba(255, 255, 255, 0.5);
  color: #fff;
  font-size: 26rpx;
}

.divider {
  width: 100%;
  height: 18rpx;
  background: #f0ede2;
}

.view-box {
  width: 100%;
}

.view {
  margin-top: 12rpx;
}

.view .img {
  margin-top: 3px;
  position: relative;
  width: 100%;
  height: 356rpx;
}

.view .img image {
  width: 100%;
  height: 100%;
}

.view .img text {
  position: absolute;
  display: block;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 356rpx;
  font-size: 30rpx;
  color: #eee;
  font-weight: bold;
  background: rgba(0, 0, 0, 0.534);
}

/*公共头部*/

.hot-view, .hot-city {
  position: relative;
  top: 100px;
  padding: 0 40rpx;
  padding-top: 28rpx;
  background-color: white;
}

.hot .title {
  height: 34rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 35rpx;
  color: #948475;
  font-weight: bold;
}

.jg {
  margin-bottom: 20px;
}

.hot .title text {
  flex: 1 1 auto;
  text-align: center;
}

.hot .title text:first-child, .hot .title text:last-child {
  height: 1px;
  background: #eae1d2;
}

.img-box, .city-box {
  overflow: hidden;
}
